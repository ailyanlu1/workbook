# Definition for singly-linked list.
class ListNode(object):
    def __init__(self, x):
        self.val = x
        self.next = None

class Solution(object):
    def addTwoNumbers(self, l1, l2):
        lsum = ListNode((l1.val+l2.val)%10)
        lnode = lsum.next
        carry = (l1.val+l2.val) // 10
        i1 = l1.next
        i2 = l2.next
        while i1 or i2:
            lnode = ListNode(i1.val + i2.val + carry)
            carry = lnode.val // 10
            lnode.val %= 10
            lnode = lnode.next
            if i1.next:
                i1 = i1.next
            if i2.next:
                i2 = i2.next
        if carry:
            lnode.next = LisiNode()
        return lsum

# test
l1 = [2, 4, 3]
l2 = [5, 6, 4]
s = Solution()
print(s.addTwoNumbers(l1,l2))
